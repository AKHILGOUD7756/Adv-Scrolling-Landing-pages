/* Sticky Columns */
.sticky-cols{
  padding:.5rem;
}

.sticky-cols-wrapper{
  position:relative;
  width:100%;
  height:100%;
}

.col{
  position:absolute;
  width:50%;
  height:100%;
  will-change:transform,opacity;
}

.col h1{color:var(--fg-200);width:60%;}
.col p{width:60%;}

.col-2{transform:translateX(100%);}
.col-3{transform:translate(100%,100%);padding:.5rem;}
.col-4{transform:translate(100%,100%);}

.col-content,.col-img{
  width:100%;
  height:100%;
  padding:.5rem;
}

.col-content-wrapper,
.col-content-wrapper-2,
.col-img-wrapper{
  width:100%;
  height:100%;
  background:var(--bg-200);
  border-radius:3rem;
  padding:2.5rem;
}

.col-content-wrapper-2{
  position:absolute;
  inset:0;
}

.col-img-1,.col-img-2{
  position:absolute;
  inset:0;
}

.col-img-2{
  clip-path:polygon(0 0,100% 0,100% 0,0 0);
}

.col-img-2 img{transform:scale(1.25);}

